{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "120s"
  },
  "database": {
    "type": "sql",
    "sql": {
      "driver": "postgres",
      "dsn": "postgres://user:password@localhost:5432/food_delivery?sslmode=disable",
      "max_open_conns": 25,
      "max_idle_conns": 5,
      "conn_max_lifetime": "5m"
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "stdout"
  },
  "features": {
    "enable_metrics": true,
    "enable_tracing": false
  }
}
